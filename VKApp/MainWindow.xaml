<Window x:Class="VKApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="VK" Height="850" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>

        <WrapPanel Grid.Column="0" Background="#597da3">
            
        </WrapPanel>
        <StackPanel FlowDirection="LeftToRight">
            <Button Content="Моя страница"></Button>
            <Button Content="Новости"></Button>
            <Button Content="Сообщения (мессенджер для лохов)"></Button>
            <Button Content="Друзья"></Button>
            <Button Content="Сообщества"></Button>
        </StackPanel>
        <Frame x:Name="CurrentPage" Content="Frame" Grid.Column="1"/>

    </Grid>
</Window>
